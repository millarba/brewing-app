<div class="col-md-6">
<h1>YOUR RECIPES</h1>
<p>-------------------</p>
<% @recipes.each do |recipe| %>
  <h1><a href="/recipes/<%= recipe.id%>"><%= recipe.name %></a></h1>
  <h1><%= recipe.style %></h1>
  <p>-------------------</p>
  <h2>Boil Time: <%= recipe.boil_time %> min</h2>
  <h2>Batch Size: <%= recipe.batch_size %></h2>
  <h2>IBU: <%= recipe.ibu %></h2>
  <p>-------------------</p>
  <br>
<% end %>
</div>

<div class="col-md-6">
  <h1>YOUR BREWS</h1>
  <% if @brews %>
    <% @brews.each do |brew| %>
      <h1>Batch: <a href="/brews/<%= brew.id %>"><%= brew.recipe.name %></a></h1>
      <h2>Brewed On: <%= brew.created_at.strftime("%b %d, %Y") %></h2>
      <br>
    <% end %>
  <% end %>
</div>